<section>
    <div class="container">
      <div class="row">
       <a href="/admin/add-product"> <p><button href="" class="btn btn-success custom ml-auto">Add Product</button></p></a>
      </div>
        <table class="table" id="productstable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">image</th>
      <th scope="col">options</th>

    </tr>
  </thead>
  <tbody>
      {{#each flowers}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px;height:50px" src="/images/{{this._id}}.jpg" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}"><button class="btn btn-primary">Edit</button></a>
      <a href="/admin/delete-product/{{this._id}}"><button class="btn btn-danger" onclick="return confirm('Are you really want to delete? {{this.name}}')">Delete</button></a></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>

<script>
  
  $(document).ready( function () {
    $('#productstable').DataTable();
} );

</script>