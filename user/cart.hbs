                <td>
                    <button class="cart-item-count mr-3 btn btn-primary">-</button>  1 <button class="  cart-item-count ml-3 btn btn-primary">+</button>
                </td>
                <td>
                    <a href="" class="btn btn-danger">Remove</a>
                </td>

                </tr>

                {{/each}}
                
               
                


            </tbody>

        </table>

    </div>
</section>