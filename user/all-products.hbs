
<section class="mainbg" >
    <div class="container mt-5 ">
        <div class="row">
            {{#each flowers}}
            <div class="col-md-3 p-3 ">
                <div class="card-1" id="card">
                    
                    <h5 class="card-title p-3">{{this.name}}        <br>     <span >  Dh{{this.price}}</span></h5>
                   
                    
  <img src="images/{{this._id}}.jpg" class="card-img-top rounded-top" style="height: 15rem; p-3" alt="">
  <div class="card-body">
      <p class="card-text">{{this.Description}}</p>
    
    <button onclick="addTocart('{{this._id}}')" class="btn-1" >Add to cart</button>
    
  </div>
</div>
            </div>
            {{/each}}
            
            </div>

        </div>

</section>